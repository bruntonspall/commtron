# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                   controllers.Application.index
GET         /c/:category                        controllers.Application.category(category: String)
GET         /c/:category/add-link               controllers.Application.addLink(category: String)
GET         /c/:category/add-text               controllers.Application.addText(category: String)
POST        /c/:category/add-text               controllers.Application.postText(category: String)
POST        /c/:category/add-link               controllers.Application.postLink(category: String)
GET         /c/:category/:post                  controllers.Application.post(category: String, post: String)
POST         /c/:category/:post/comment         controllers.Application.postComment(category: String, post: String)
POST        /post/:post/:direction              controllers.Application.postVote(post: String, direction: String)
POST        /comment/:comment/:direction        controllers.Application.commentVote(comment: String, direction: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                       controllers.Assets.at(path="/public", file)

# Login page
GET         /login                              securesocial.controllers.LoginPage.login
GET         /logout                             securesocial.controllers.LoginPage.logout

# Providers entry points
GET     /authenticate/:provider     securesocial.controllers.ProviderController.authenticate(provider)
POST    /authenticate/:provider     securesocial.controllers.ProviderController.authenticateByPost(provider)
GET     /not-authorized             securesocial.controllers.ProviderController.notAuthorized