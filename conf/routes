# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                       controllers.Application.index
GET        /:category              controllers.Application.category(category: String)
GET        /:category/:post        controllers.Application.post(category: String, post: String)
POST       /post/:post/:direction        controllers.Application.postVote(post: String, direction: String)
POST       /comment/:comment/:direction        controllers.Application.commentVote(comment: String, direction: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file           controllers.Assets.at(path="/public", file)
